---
import { Image } from "astro:assets";
import bostonBandana from "../assets/images/boston-bandana.png";
import bostonShark from "../assets/images/boston-shark.png";
---

<div class="mascot-container" id="mascotContainer">
    <div class="speech-bubble">
        <p id="mascot-text">¡Bienvenidos a nuestra boda!</p>
    </div>
    <div class="mascot-image-wrapper">
        <Image 
            src={bostonBandana} 
            alt="Mascota Boston Terrier" 
            width={120} 
            height={120} 
            class="mascot-img main-img"
        />
        <Image 
            src={bostonShark} 
            alt="Mascota Boston Terrier Shark" 
            width={120} 
            height={120} 
            class="mascot-img hover-img"
        />
    </div>
</div>

<script>
    const messages = [
        "¡Bienvenidos a nuestra boda!",
        "¡No olviden confirmar!",
        "¡Sube tus fotos!",
        "¡Soy el guardián de la boda!",
        "Manuel y Andrea ❤️"
    ];

    const speechText = document.getElementById('mascot-text');
    const mascotContainer = document.getElementById('mascotContainer');
    let messageIndex = 0;

    // Change message periodically
    setInterval(() => {
        if (speechText) {
            speechText.style.opacity = '0';
            setTimeout(() => {
                messageIndex = (messageIndex + 1) % messages.length;
                speechText.textContent = messages[messageIndex];
                speechText.style.opacity = '1';
            }, 500);
        }
    }, 6000);

    // Click interaction
    mascotContainer?.addEventListener('click', () => {
        mascotContainer.classList.add('bounce');
        mascotContainer.classList.toggle('shark-mode');
        setTimeout(() => {
            mascotContainer.classList.remove('bounce');
        }, 1000);
    });
</script>

<style>
    .mascot-container {
        position: fixed;
        bottom: 20px;
        left: 20px;
        z-index: 1000;
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
        animation: float 6s ease-in-out infinite;
        transition: transform 0.3s ease;
    }

    .mascot-container:hover {
        transform: scale(1.05);
    }
    
    .mascot-image-wrapper {
        width: 110px;
        height: 110px;
        position: relative;
        filter: drop-shadow(0 5px 15px rgba(0,0,0,0.2));
    }

    .mascot-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        position: absolute;
        top: 0;
        left: 0;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .main-img {
        opacity: 1;
        transform: scale(1) rotate(0deg);
        z-index: 2;
    }

    .hover-img {
        opacity: 0;
        transform: scale(0.5) rotate(15deg);
        z-index: 1;
    }
    
    /* Hover state */
    .mascot-container:hover .main-img {
        opacity: 0;
        transform: scale(0.5) rotate(-15deg);
    }
    
    .mascot-container:hover .hover-img {
        opacity: 1;
        transform: scale(1) rotate(0deg);
    }
    
    /* Toggle state for mobile */
    .mascot-container.shark-mode .main-img {
        opacity: 0;
        transform: scale(0.5) rotate(-15deg);
    }
    
    .mascot-container.shark-mode .hover-img {
        opacity: 1;
        transform: scale(1) rotate(0deg);
    }

    .speech-bubble {
        background: rgba(255, 255, 255, 0.95);
        padding: 10px 15px;
        border-radius: 15px;
        border-bottom-left-radius: 2px;
        box-shadow: 0 4px 15px rgba(74, 144, 226, 0.15);
        margin-bottom: 10px;
        max-width: 180px;
        text-align: center;
        position: relative;
        transform-origin: bottom left;
        animation: fadeInBubble 0.5s ease forwards 1s;
        border: 1px solid rgba(74, 144, 226, 0.1);
        backdrop-filter: blur(5px);
    }

    .speech-bubble::after {
        content: '';
        position: absolute;
        bottom: -6px;
        left: 15px;
        width: 12px;
        height: 12px;
        background: rgba(255, 255, 255, 0.95);
        transform: rotate(45deg);
        border-right: 1px solid rgba(74, 144, 226, 0.1);
        border-bottom: 1px solid rgba(74, 144, 226, 0.1);
    }

    .speech-bubble p {
        font-family: var(--font-sans, sans-serif);
        font-size: 0.85rem;
        color: var(--color-primary-dark, #2E5C8A);
        margin: 0;
        font-weight: 500;
        transition: opacity 0.5s ease;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    @keyframes fadeInBubble {
        0% { opacity: 0; transform: translateY(10px) scale(0.9); }
        100% { opacity: 1; transform: translateY(0) scale(1); }
    }

    @keyframes bounce {
        from { transform: translateY(0); }
        to { transform: translateY(-15px); }
    }

    @media (max-width: 768px) {
        .mascot-image-wrapper {
            width: 80px;
            height: 80px;
        }
        .speech-bubble {
            font-size: 0.75rem;
            padding: 8px 12px;
            max-width: 140px;
        }
        .mascot-container {
            bottom: 15px;
            left: 15px;
        }
    }
</style>
