---
import '../styles/global.css';
import Mascot from '../components/Mascot.astro';

interface Props {
	title?: string;
}

const { title = "Manuel & Andrea | Nuestra Boda" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Pinyon+Script&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <slot />
    <Mascot />
    
    <!-- External JavaScript will be added at the end of the body -->
</body>
</html>
